<h1 class="main"><%= @user.username %>'s Journal</h1>

<h2>Owned games:</h2>

<br></br>

<div class="lists">
  <ul class="inner_lists">
  <% @user.owned_games.each do |game| %>
    <li><b><%= game.title %></b>
      <ul>
        <li>Owned on: <%= game.platform.name %></li>
        <li>Genre: <%= game.genre.name %></li>
        <% if game.notes == "" || game.notes == nil %>
          <li>No notes :(</li>
        <% else %>
          <li><%= game.notes %></li>
        <% end %>
      </ul>
    </li>
    <form class="buttons" method="GET" action="/games/<%= game.slug %>/edit">
      <input type="submit" value="Edit Game">
    </form>
    <form class="buttons" method="POST" action="/games/<%= game.slug %>">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Remove Game from Journal">
    </form>
  <% end %>
  </ul>
</div>
