<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<h1 class="main">List of recent games and their owners</h1>

<br></br>

<div class="lists">
  <% @archived_games.each do |game| %>
    <ul><h2><%= game.title %></h2>
      <li>Owned by: <!-- figure out way to remove this if no users own game -->
        <% @users.each do |user| %>
          <% if user.owned_games.select{|o_g| o_g.title == game.title} != [] %>
            <ul>
              <li><a href="/users/<%= user.slug %>"><%= user.username %></a></li>
            </ul>
          </li><br>
        <% end %>
      <% end %>
      <% if !game.genre.name.nil? %>
        <li>Genre: <%= game.genre.name %></li>
      <% else%>
        <li>No genre listed :(</li>
      <% end %>
      <h3>Available on:</h3>
      <% game.platforms.each do |platform| %>
        <% if !platform.name.nil? %>
          <li><%= platform.name %></li>
        <% end %>
      <% end %>
    </ul><br>
  <% end %>
</div>
